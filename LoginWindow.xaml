<Window x:Class="ContractMonthlyClaimsSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Contract Monthly Claims System" 
        Height="350" Width="400">
    

    <Grid  Background="#F4F4F4" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <!---Title-->
        <TextBlock Text="Contract Monthly Claims System"
                   FontSize="18" FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center" Margin="0.10"/>
        
        <!--Login form-->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <StackPanel.Margin>
                <Thickness>0,10,0,0</Thickness>
            
        </StackPanel.Margin>
        <Label Content="Username" FontWeight="SemiBold" />
        <TextBox Height="30" Width="250" HorizontalAlignment="Center"/>

        <Label Content="Password" FontWeight="SemiBold" Margin="0,8,0,0" />
        <PasswordBox Height="30" Width="250" HorizontalAlignment="Center"></PasswordBox>

            <Label Content="Role" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <ComboBox  x:Name="RoleComboBox" Height="30" Width="250" HorizontalAlignment="Center">
                <ComboBoxItem Content="Lecturer"/>
                <ComboBoxItem Content="Coordinator"/>
                <ComboBoxItem Content="Manager"/>
            </ComboBox>

            <Button Content="Login"
                    Width="100" Height="35"
                        Background="CornflowerBlue" Foreground="Black"
                    FontWeight="Bold"
                    HorizontalAlignment="Center" Margin="0,12,0,0"
                    Click="LoginButton_Click"/>

            
</StackPanel>
    </Grid>
</Window>
