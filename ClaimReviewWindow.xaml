<Window x:Class="ContractMonthlyClaimsSystem.ClaimReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimsSystem"
        mc:Ignorable="d"
        Title="ClaimReviewWindow" Height="450" Width="750">

    <Grid Margin=" 15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Pending Lecturer Claims"
                   FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>

        <DataGrid x:Name="ClaimsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ClaimId}" Width="50"/>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerId}" Width="100"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="70"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}" Width="80"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}" Width="90"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="180"/>

                <!-- Approve/Reject buttons -->
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Approve" Width="70" Margin="2"
                                        Click="Approve_Click"/>
                                <Button Content="Reject" Width="70" Margin="2"
                                        Click="Reject_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
