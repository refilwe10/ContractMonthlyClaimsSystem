<Window x:Class="ContractMonthlyClaimsSystem.ClaimReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Pending Claims"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Pending Claims Review"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- DataGrid showing all pending claims -->
        <DataGrid x:Name="ClaimsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="0,5,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="100"/>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="150"/>
                <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="120"/>
                <DataGridTextColumn Header="Total (ZAR)" Binding="{Binding TotalAmount}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Approve"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="Approve_Click"/>
            <Button Content="Reject"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="Reject_Click"/>
            <Button Content="Refresh"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="Refresh_Click"/>
            <Button Content="Close"
                    Width="100"
                    Height="35"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
