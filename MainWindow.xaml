<Window x:Class="ContractMonthlyClaimsSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimsSystem"
        mc:Ignorable="d"
        Title="Contract Monthly Claims System"
        Height="350"
        Width="450">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Contract Monthly Claims System"
                       FontSize="20"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Button to open Lecturer Claim Submission -->
            <Button Content="Submit New Claim"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,10"
                    Click="OpenClaimWindow_Click"/>

            <!-- Button to open Coordinator Review Window -->
            <Button Content="Review Pending Claims"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,10"
                    Click="OpenReviewWindow_Click"/>

            <Button Content="Review Pending Claims" Width="170" Height="35" Click="OpenReviewWindow_Click"/>
            
            <Button Content="Track My Claims"
                    Height="40"
                    FontSize="14"
                    Margin="0,0,0,10"
                    Click="OpenStatusWindow_Click"/>


            <!-- Exit button -->
            <Button Content="Exit"
                    Height="40"
                    FontSize="14"
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
