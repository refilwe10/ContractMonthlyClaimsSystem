<Window x:Class="ContractMonthlyClaimsSystem.ClaimSubmissionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Lecturer Claim"
        Height="420" Width="420"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hours worked -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Hours Worked:" FontWeight="Bold"/>
            <TextBox x:Name="HoursWorkedBox" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Hourly rate -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Hourly Rate (ZAR):" FontWeight="Bold"/>
            <TextBox x:Name="HourlyRateBox" Margin="0,5,0,0"/>
        </StackPanel>
        <!-- Total (auto-calculated) -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Total Amount:" FontWeight="Bold"/>
            <TextBox x:Name="TotalBox" IsReadOnly="True" Background="#FFEFEFEF" Margin="0,5,0,0"/>
        </StackPanel>

        <!--Supporting Documents-->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Supporting Document:" FontWeight="Bold"/>
            <TextBox x:Name="Document" Margin="0,5,0,0"/>
            <TextBox Width="280" Height="18" IsReadOnly="True" Text="No file chosen"/>
            <Button Content="Upload" Width="80" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Notes -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Additional Notes:" FontWeight="Bold"/>
            <TextBox x:Name="NotesBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Submit" Width="100" Height="35" Margin="0,0,10,0" Click="Submit_Click"/>
            <Button Content="Cancel" Width="100" Height="35" Click="Cancel_Click"/>
            <Button Content="Submit New Claims" Width="100" Height="35" Click="OpenClaimWindow_Click">
                
            </Button>
        </StackPanel>
    </Grid>
</Window>

