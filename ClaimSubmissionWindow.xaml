<Window x:Class="ContractMonthlyClaimsSystem.ClaimSubmissionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Hours Worked:" FontWeight="Bold"/>
            <TextBox x:Name="HoursWorkedTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Hourly Rate:" FontWeight="Bold"/>
            <TextBox x:Name="HourlyRateTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Notes:" FontWeight="Bold"/>
            <TextBox x:Name="NotesTextBox" Margin="0,5,0,10"/>

            <Button Content="Submit Claim" 
                    Width="150" Height="35" 
                    HorizontalAlignment="Center"
                    Background="#3498db"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="SubmitClaim_Click"/>
        </StackPanel>
    </Grid>
</Window>
