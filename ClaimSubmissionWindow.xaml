<Window x:Class="ContractMonthlyClaimsSystem.ClaimSubmissionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=" Submit Lecturer Claim"
        Height="450" Width="420">
        
    <Grid Background="#f9f9f9" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height ="Auto"/>
            <RowDefinition Height ="Auto"/>
            <RowDefinition Height ="Auto"/>
            <RowDefinition Height ="*"/>
            <RowDefinition Height ="Auto"/>


        </Grid.RowDefinitions>
        <!-- Hours worked-->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Hours Worked:" FontWeight="Bold">
                <TextBox x:Name="HoursWorkedBox" Margin="0,5,0,0"/>
            </TextBlock>
            
        </StackPanel>
        <!--Hourly rate-->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Hourly Rate:" FontWeight="Bold">
        <TextBox x:Name="HourlyRateBox" Margin="0,5,0,0"/>
            </TextBlock>
        </StackPanel>

        <!--Total (auto-calculated)-->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Total Amount:" FontWeight="Bold">
          <TextBox x:Name="TotalBox" IsReadOnly="True" Background="#FFEFEFEF" Margin="0,5,0,0"/>
            </TextBlock>
        </StackPanel>

        <!--Notes-->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Additional Notes" FontWeight="Bold">
            <TextBox x:Name="NoteBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,0"/>
            </TextBlock>
        </StackPanel>
        <!--Header-->
        <TextBlock Text="Submit New Claim"
                   FontSize="18" FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
        <Button Content="Submit New Claim" Width="150" Height="35" Click="OpenClaimWindow_Click">
            
        </Button>
        
        <!--Form-->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="40,20,40,20">
            <Label Content="Lectures ID" Margin="0,0,0,10"/>
            <TextBox Height="28" Margin="0,0,0,10"/>
            <Label Content="Month" Margin="0,0,0,10"/>
            <ComboBox Height="28" Margin="0,0,0,10" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="January"/>
                <ComboBoxItem Content="February"/>
                <ComboBoxItem Content="March"/>
                <ComboBoxItem Content="April"/>
                <ComboBoxItem Content="May"/>
                <ComboBoxItem Content="June"/>
                <ComboBoxItem Content="July"/>
                <ComboBoxItem Content="August"/>
                <ComboBoxItem Content="September"/>
                <ComboBoxItem Content="October"/>
                <ComboBoxItem Content="November"/>
                <ComboBoxItem Content="December"/>
            </ComboBox>
            <Label Content="Hours Worked"/>
            <TextBox Height="28"/>
            <Label Content="Hours Rate"/>
            <TextBox Height="28"/>

            <Label Content="Supporting Document"/>
            <StackPanel Orientation="Horizontal"/>
            <TextBox Width="280" Height="28" IsReadOnly="True" Text="No file chosen"/>
            <Button Content="Browse..." Width="80" Margin="10,0,0,0"/>




        </StackPanel>
        <!--Button-->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Submit Claim" Width="120" Height="35"
                    Background="#3498db" Foreground="White" FontWeight="Bold" Margin="10,0"/>
            <Button Content="Cancel" Width="120" Height="35"
                    Background="#e74c3c" Foreground="White" FontWeight="Bold" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
